{
	"name": "iDoc",
	"version": "0.994",
	"description": "The Internet In-Page Editor. Edit any web page freely and save them.",
	"icons": {
		"48": "pen48.png",
		"128": "pen128.png"
	},
	"browser_action": {
		"default_icon": "pen48.png",
		"default_title": "Begin editing",
		"popup": "controls.html"
	},
	"options_page": "options.html",
	"permissions": ["tabs"],
	"content_scripts": [
		{
			"matches": ["http://*/*", "file://*/*.html"],
			"js": ["idoc.js"]
		}
	]
}
